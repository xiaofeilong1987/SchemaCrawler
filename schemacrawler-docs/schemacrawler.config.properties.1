schemacrawler.format.data.show_lobs=true

query.set_transform_param_constraints_true={call DBMS_METADATA.SET_TRANSFORM_PARAM(DBMS_METADATA.SESSION_TRANSFORM, 'CONSTRAINTS', TRUE)}
query.set_transform_param_emit_schema_false={call DBMS_METADATA.SET_TRANSFORM_PARAM(DBMS_METADATA.SESSION_TRANSFORM, 'EMIT_SCHEMA', FALSE)}
query.set_transform_param_storage_false={call DBMS_METADATA.SET_TRANSFORM_PARAM(DBMS_METADATA.SESSION_TRANSFORM, 'STORAGE', FALSE)}
query.set_transform_param_tablespace_false={call DBMS_METADATA.SET_TRANSFORM_PARAM(DBMS_METADATA.SESSION_TRANSFORM, 'TABLESPACE', FALSE)}
query.user_tables=SELECT DBMS_METADATA.get_ddl(object_type=>'TABLE',name=>table_name) ddl FROM user_tables WHERE NOT REGEXP_LIKE(table_name,'^MDRS|^MDRT|^SYS_IOT') ORDER BY table_name

schemacrawler.table.pattern.include=..*\..*BOOK.*\..*
schemacrawler.table.pattern.exclude=..*\..*BOOKAUTHORS.*\..*